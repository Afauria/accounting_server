<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zwy.accounting.dao.UserEntityMapper">
    <resultMap id="BaseResultMap" type="com.zwy.accounting.entity.UserEntity">
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="phonenum" property="phonenum" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="TABLE">
        tb_user
    </sql>
    <sql id="COLUMN">
        user_id,phonenum
    </sql>

    <insert id="insert" parameterType="com.zwy.accounting.entity.UserEntity">
        insert into tb_user (user_id,phonenum)
        values (#{userId}, #{phonenum})
    </insert>
    <select id="selectUsers" resultMap="BaseResultMap">
        SELECT
        <include refid="COLUMN"/>
        FROM
        <include refid="TABLE"/>
    </select>

    <select id="isExist" parameterType="java.lang.String" resultType="java.lang.String">
        select phonenum from tb_user where phonenum = #{phonenum}
    </select>

    <select id="queryUser" resultMap="BaseResultMap">
        SELECT
        <include refid="COLUMN"/>
        FROM
        <include refid="TABLE"/>
        where phonenum = #{phonenum}
    </select>
</mapper>